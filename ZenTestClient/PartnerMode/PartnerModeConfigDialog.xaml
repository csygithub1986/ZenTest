        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Black1" Margin="5" Grid.Row="0" Name="gbBlack" IsEnabled="False">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel >
                    <TextBlock Text="搜索数" Padding="0,4" Height="23" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,5"/>
                    <TextBlock Text="最大时间/秒" Padding="0,4" Height="23" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,5"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBox Text="{Binding GameSetting.Layout}" HorizontalAlignment="Left" Height="23" Margin="0,5" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                    <TextBox Text="{Binding GameSetting}" HorizontalAlignment="Left" Height="23" Margin="0,5" VerticalAlignment="Top" Width="120"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
